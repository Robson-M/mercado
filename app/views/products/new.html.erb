<h1>Novo produto</h1>

<%= form_with model: @product do |form| %>
    <div>
        <%= form.label :Nome %></br>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :Descrição %></br>
        <%= form.text_field :description %>
    </div>

    <div>
    <%= form.label :Preço %></br>
    <%= form.text_field :price %>
    </div>

    <div>
    <%= form.label :Estoque %></br>
    <%= form.text_field :amount %>
    </div>

    <div>
        <%= form.submit %>
    </div>

    <%= link_to "Home", products_path %>

<% end %>